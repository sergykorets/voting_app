										<span class="text-muted"><%= participation.candidate.address %></span>
									</h2>
									<div class="row">
										<p class="year">Rok narození: <%= participation.candidate.birth_year %></p>
										<div class="col-xs-12 content hideContent">
											<h2 class="featurette-heading">
												<span class="text-muted">Představení kandidáta</span>
											</h2>
											<p class="lead"><%= participation.description %></p>
										</div>
										<p class="lead show-more"><button class="btn btn-default">More</button></p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	<% else %>
