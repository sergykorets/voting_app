<style type="text/css">
	div.text-container {
			margin: 0 auto;
			width: 75%;    
	}
	.content {
		max-height: 0;
		overflow: hidden;
		-webkit-transition: max-height 0.8s;
		-moz-transition: max-height 0.8s;
		transition: max-height 0.8s;
	}
	.showContent {
		max-height: 1000px;
	}
	.show-more {
		padding: 10px 0;
		text-align: left;
		margin-left: 1.5%;
	}
	.lead {
	  	padding-left: 5%;
	}
	.featurette-heading {
		padding-left: 5%;
	}
	.year {
		padding-left: 6.5%;
	}
</style>
<script type="text/javascript">
	$(document).ready(function() {
		console.log( "ready!" );
		$(".show-more button").on("click", function() {
			var $this = $(this);
			console.log($this);
			var $content = $this.parent().prev("div.content");
			var linkText = $this.text().toUpperCase();

			console.log($content);
			$content.toggleClass("showContent");

			if(linkText === "MORE"){
				linkText = "Less";

			} else {
				linkText = "More";
			};

			$this.text(linkText);
		});
	});
</script>
<div id="masthead">  
	<div class="container">
		<div class="row">
			<div class="col-md-7">
				<h1><%= t("headers.homepage.index") %>
					<p class="lead">Známost</p>
				</h1>
			</div>
		</div> 
	</div>
</div>

<% tabs = rug_tabs %>
<% tabs.tab :first, "Předsednictvo" do %>
<hr class="featurette-divider">
<% @candidate_participations.each do |participation| %>
	<% if participation.election_part.id == 1 %>
		<div class="container">
			<div class="row">
				<div class="col-md-12"> 
					<div class="panel">
						<div class="panel-body">
							<div class="row">    
								<br>
								<div class="col-md-2 col-sm-3 text-center">
									<%= image_tag participation.candidate.photo.url(:medium), class: "img-circle", style: "width:200px;height:200px" %>
								</div>
								<div class="col-md-10 col-sm-9">
									<h2 class="featurette-heading"><%= participation.candidate.name_firstname %> <%= participation.candidate.name_lastname %>
										<span class="text-muted"><%= participation.candidate.address %></span>
									</h2>
									<div class="row">
										<p class="year">Rok narození: <%= participation.candidate.birth_year %></p>
										<div class="col-xs-12 content hideContent">
											<h2 class="featurette-heading">
												<span class="text-muted">Představení kandidáta</span>
											</h2>
											<p class="lead"><%= participation.description %></p>
											<h2 class="featurette-heading">
												<span class="text-muted">Vize rozvoje asociace a konkrétní návrhy</span>
											</h2>
											<p class="lead"><%= participation.visions %></p>
										</div>
										<p class="lead show-more"><button class="btn btn-default">More</button></p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	<% else %>
		<% next %>
	<% end %>  
<% end %>
<% end %>
<br>
